{% extends 'base.html.twig' %}

{% block title %}Hello ActeurController!{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            {% for acteur in acteurs %}
                <div class="col-md-4">
                    <div class="card" style="width: 18rem;">
                        <img src="https://picsum.photos/200" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">{{ acteur.surname }} {{ acteur.name }}</h5>
                        </div>
                        <ul class="list-group list-group-flush">
                            {% for film in acteur.films %}
                                <li class="list-group-item"><a href="{{ path('single_film', { 'id': film.id }) }}">{{ film.name }}</a></li>
                            {% endfor %}
                        </ul>
                        <div class="card-body">
                            <a href="{{ path('single_acteur', { 'id': acteur.id }) }}" class="btn btn-primary">Voir plus</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
